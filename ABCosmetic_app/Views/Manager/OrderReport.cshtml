
@{
    ViewBag.Title = "Order Report";
    ViewBag.navbarColor = "blue";
}
<main>
    <!--Main Container-->
    <div class="container">
        <!--Section: Basic Product Listing-->
        <section id="products">
            <div class="divider-new"></div>
            <div class="row">
                <div class="col-md-12">
                    <!--Product Panel-->

                    <div class="card-panel product-panel hoverable m-card-panel">
                        <div class="row">
                            <h4 style="margin-left:10px;">@ViewBag.Message</h4>
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <p>
                                            <b>Daily Orders</b>
                                        </p>
                                    </li>
                                    @foreach (var item in Model.daily)
                                    {
                                        <li class="list-group-item">
                                            @item.date | @item.name | $@item.total
                                            @if (item.StatusID != 3)
                                            {
                                               <span class="label red pull-right">Payment</span>
                                            }
                                            else
                                            {
                                                <span class="label green pull-right">Paied</span>
                                            }
                                        </li>
                                    }
                                </ul>

                            </div>
                            
                            <div class="col-xs-12 col-sm-6 col-lg-1">
                            </div>
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <p>
                                            <b>Weekly Orders</b>
                                        </p>
                                    </li>
                                    @foreach (var item in Model.weekly)
                                    {
                                        <li class="list-group-item">
                                            @item.date | @item.name | $@item.total
                                            @if (item.StatusID != 3)
                                            {
                                                <span class="label red pull-right">Payment</span>
                                            }
                                            else
                                            {
                                                <span class="label green pull-right">Paied</span>
                                            }
                                        </li>
                                    }
                                </ul>

                            </div>

                        </div>
                    </div>

                    <!--/.Product Panel-->

                </div>



            </div>



        </section>
        <!--/.Section: Basic Product Listing-->
    </div>
</main>

@Scripts.Render("~/bundles/jquery")
