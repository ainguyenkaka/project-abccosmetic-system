
@{
    ViewBag.Title = "Product Report";
    ViewBag.navbarColor = "blue";
}
<main>
    <!--Main Container-->
    <div class="container">
        <!--Section: Basic Product Listing-->
        <section id="products">
            <div class="divider-new"></div>
            <div class="row">
                <div class="col-md-12">
                    <!--Product Panel-->

                    <div class="card-panel product-panel hoverable m-card-panel">
                        <div class="row">
                            <h4 style="margin-left:10px;">@ViewBag.Message</h4>
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                <ul class="collection m-tiems">
                                    <li class="list-group-item">
                                        <p>
                                            <b>Daily Sold Products</b>
                                        </p>
                                    </li>
                                    @foreach (var item in Model.daily)
                                    {
                                        <li class="collection-item m-item" data-id="3">
                                            <div>
                                                    <span class="quantity">@item.quantity</span>x
                                                    @item.name
                                                    <span class="label green pull-right" data-price="1500.00">$@item.price x @item.quantity</span>
                                            </div>
                                        </li>
                                    }
                                </ul>

                            </div>
                            
                            <div class="col-xs-12 col-sm-6 col-lg-1">
                            </div>
                            <div class="col-xs-12 col-sm-6 col-lg-6">
                                <ul class="collection m-tiems">
                                    <li class="list-group-item">
                                        <p>
                                            <b>Weekly Sold Products</b>
                                        </p>
                                    </li>
                                    @foreach (var item in Model.weekly)
                                    {
                                        <li class="collection-item m-item" data-id="3">
                                            <div>
                                                    <span class="quantity">@item.quantity</span>x
                                                    @item.name
                                                    <span class="label green pull-right" data-price="1500.00">$@item.price x @item.quantity</span>
                                            </div>
                                        </li>
                                    }
                                </ul>

                            </div>

                        </div>
                    </div>

                    <!--/.Product Panel-->

                </div>



            </div>



        </section>
        <!--/.Section: Basic Product Listing-->
    </div>
</main>

@Scripts.Render("~/bundles/jquery")
